<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_blue_corner">

    <TextView
        android:id="@+id/firstOtTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="First Overtime"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/firstTv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/firstTv"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="3dp"
        android:textColorHint="@color/txtGray"
        android:background="@drawable/bg_blue_corner"
        android:clickable="false"
        android:drawableEnd="@drawable/ic_clock"
        android:drawablePadding="15dp"
        android:editable="false"
        android:hint="from"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/secondTv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstOtTv" />

    <TextView
        android:id="@+id/secondTv"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/bg_blue_corner"
        android:clickable="false"
        android:drawableEnd="@drawable/ic_clock"
        android:drawablePadding="15dp"
        android:hint="to"
        android:textColorHint="@color/txtGray"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/firstTv"
        app:layout_constraintTop_toTopOf="@+id/firstTv" />

    <TextView
        android:id="@+id/firstAmountEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_blue_corner"
        android:gravity="start|center_vertical"
        android:textAlignment="textStart"
        android:clickable="false"
        android:editable="false"
        android:textColorHint="@color/txtGray"
        android:hint="enter amount....."
        android:inputType="numberDecimal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@id/secondTv"
        app:layout_constraintStart_toStartOf="@id/firstTv"

        app:layout_constraintTop_toBottomOf="@id/firstTv" />

    <TextView
        android:id="@+id/secondOtTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Second Overtime"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/firstAmountEt"
        app:layout_constraintTop_toBottomOf="@id/firstAmountEt" />

    <TextView
        android:id="@+id/thirdTv"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/bg_blue_corner"
        android:clickable="false"
        android:drawableEnd="@drawable/ic_clock"
        android:textColorHint="@color/txtGray"
        android:drawablePadding="15dp"
        android:editable="false"
        android:hint="from"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/fourthTv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondOtTv" />

    <TextView
        android:id="@+id/fourthTv"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/bg_blue_corner"
        android:clickable="false"
        android:drawableEnd="@drawable/ic_clock"
        android:drawablePadding="15dp"
        android:editable="false"
        android:hint="to"
        android:textColorHint="@color/txtGray"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/thirdTv"
        app:layout_constraintTop_toTopOf="@+id/thirdTv" />

    <TextView
        android:id="@+id/secondAmountEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_blue_corner"
        android:clickable="false"
        android:editable="false"
        android:textColorHint="@color/txtGray"
        android:gravity="start|center_vertical"
        android:textAlignment="textStart"
        android:hint="enter amount....."
        android:inputType="numberDecimal"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/fourthTv"
        app:layout_constraintStart_toStartOf="@id/thirdTv"
        app:layout_constraintTop_toBottomOf="@id/thirdTv" />

